<%= render 'users/list', user: @book.user, book: @newbook %>


<h2>Book detail</h2>
  <div class="col-xs-9">
	<table class="table">
		<td>
		 	<%= link_to user_path(@book.user) do %>
		 	<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
		 	<%= @book.user.name %>
		 	<% end %>
		</td>
		<td><%= @book.title %></td>
		<td><%= @book.body %></td>

		<td><% if current_user == @book.user %>
			<%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success edit_book_15610" %>
			<%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class:"btn-sm btn-danger destroy_book_15610" %>
		</td>
	 <% end %>
	</table>
  </div>