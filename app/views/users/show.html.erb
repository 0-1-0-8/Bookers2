<%= render 'users/list', user:@user, book: @book %>
  <div class="col-xs-9">
    <table class="table table-hover table-inverse">
    	<thead>
      		<h2>Books</h2>
        		<tr>
        			<th></th>
             		<th>Title</th>
             		<th>Opinion</th>
          	</tr>
      </thead>
      	<tbody>
      	 <% @books.each do |book| %>
      		<tr>
      			<td>
    	  			<%= link_to user_path(book.user) do %>
    				  <%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', size: '40x40', fallback: "no_image.jpg" %>
            </td>
    			<% end %>
      			<td><%= link_to book.title, book_path(book) %></td>
      	  		<td><%= book.body %></td>
      		</tr>
      	 <% end %>
      	</tbody>
    </table>
  </div>